<%= form_for content, url: admin_content_path(content), html: { class: 'content-form' } do |f| %>

  <div class="card-block">
    <div class="form-group">
      <preview-text-area language="markdown">
        <%= f.text_area :body, rows: 20 %>
      </preview-text-area>
    </div>
  </div>

  <footer class="card-footer">
    <%= f.submit "Speichern" %>
  </footer>

<% end %>
